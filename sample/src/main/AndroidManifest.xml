<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uuxia.com.sample">

    <application
        android:name=".CrashApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/CustomActivityOnCrashTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="uuxia.com.sample.CustomErrorActivity"
            android:label="@string/error_title"
            android:theme="@android:style/Theme.Material.Light.Dialog"
            android:process=":error_activity">
            <!-- You can also use this instead of using CustomActivityOnCrash.setErrorActivityClass(CustomErrorActivity.class); -->
            <!--<intent-filter>-->
            <!--<action android:name="cat.ereza.customactivityoncrash.ERROR" />-->
            <!--</intent-filter>-->
        </activity>
    </application>

</manifest>
